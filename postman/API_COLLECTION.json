{
  "info": {
    "name": "ASINU Core V1.1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Email Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/email/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "email", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.test('login ok', () => pm.expect(json.ok).to.eql(true));",
              "if (json.token) { pm.environment.set('token', json.token); }",
              "if (json.user && json.user.id) { pm.environment.set('user_id', json.user.id); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Care Pulse - Event CHECK_IN (EMERGENCY)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event_type\": \"CHECK_IN\",\n  \"event_id\": \"{{$guid}}\",\n  \"client_ts\": {{\$timestamp}}000,\n  \"client_tz\": \"Asia/Bangkok\",\n  \"ui_session_id\": \"{{$guid}}\",\n  \"source\": \"manual\",\n  \"self_report\": \"EMERGENCY\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/care-pulse/events",
          "host": ["{{base_url}}"],
          "path": ["api", "care-pulse", "events"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.test('event ok', () => pm.expect(json.ok).to.eql(true));"
            ]
          }
        }
      ]
    },
